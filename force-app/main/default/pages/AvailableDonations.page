<apex:page standardController="Donation__c" recordSetVar="donations" lightningStylesheets="true">
    <apex:form>
        <apex:pageBlock id="donationlist" title="Donations">
            <apex:pageMessages />
            <apex:pageBlockTable var="don" value="{!donations}" >
                <apex:column headerValue="Name">
                    <apex:outputLink value="{!URLFOR($Action.Donation__c.View, don.id)}">
                        <apex:outputField value="{!don.Name}"/>
                    </apex:outputLink>
                </apex:column>
                <apex:column value="{!don.Inventory__r.Shelter__r.Name}"/>
                <apex:column value="{!don.Inventory__r.Shelter__r.Zip_Code__c}"/>
                <apex:column value="{!don.Inventory__r.Shelter__r.City__c}"/>
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
</apex:page>